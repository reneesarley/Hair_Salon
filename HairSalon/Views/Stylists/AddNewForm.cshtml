<h2>Add New Stylist</h2>

<form action="/stylists/new" method="post">
    <div class="form-group">
        <label for="stylistFirstName">First Name</label>
        <input type="text" class="form-control nameEntry" name="firstName" id="firstName">
        <label for="stylistLastName">Last Name</label>
        <input type="text" class="form-control nameEntry" name="LastName" id="LastName">
    </div>
    <h3>Add Specialties for this stylist:</h3>
    <div class="form-group">
        <label for="specialties">Select all the apply</label>
        <select multiple class="form-control" name="specialties">
            @foreach(var specialty in Model)
            {
            <option value="@specialty.GetSpecialtyId()">@specialty.GetSpecialtyName()</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
